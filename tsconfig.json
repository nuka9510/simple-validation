{
  "compilerOptions": {
    "checkJs": true,
    "strictNullChecks": false,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@nuka9510/simple-validation": ["src/index.ts"],
      "@nuka9510/simple-validation/@types/validation": ["@types/validation.d.ts"]
    }
  },
  "include": [
    "src/index.ts"
  ]
}